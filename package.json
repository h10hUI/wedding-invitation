    "url": "https://github.com/hi0711/express-passport-auth/issues"
  },
  "homepage": "https://github.com/hi0711/express-passport-auth#readme",
  "dependencies": {
    "@babel/core": "^7.13.10",
    "@babel/preset-env": "^7.13.10",
    "autoprefixer": "^10.2.5",
    "axios": "^0.21.1",
    "babel-loader": "^8.2.2",
    "bcrypt": "^5.0.1",
    "browserslist": "^4.16.4",
    "connect-flash": "^0.1.1",
    "cors": "^2.8.5",
    "css-loader": "^5.2.2",
    "dotenv": "^8.2.0",
    "dotenv-webpack": "^7.0.2",
    "express": "^4.17.1",
    "express-session": "^1.17.1",
    "helmet": "^4.4.1",
    "morgan": "^1.10.0",
    "passport": "^0.4.1",
    "passport-local": "^1.0.0",
    "postcss-loader": "^4.2.0",
    "pug": "^3.0.2",
    "sass": "^1.32.10",
