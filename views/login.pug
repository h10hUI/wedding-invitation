doctype html
html(lang='ja')
  head
    meta(charset='utf-8')
    title login
  body
    if ERROR != ''
      p #{ERROR}
    form(action='/login' method='POST')
      input#username(type='text' name='username' placeholder='UserName')
      input#password(type='password' name='password' placeholder='password')
      input#cropped(type='hidden' name='cropped')
      button(type='submit' value='送信') 送信

    script(src="/dist/js/app.bundle.js")
